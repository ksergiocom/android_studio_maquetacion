<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_agenda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Agenda"
        android:textSize="34sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aquí se muestran tus planes por día, semana, mes, año. Puedes definir además alertas y reordenar tus itinerarios en el canvas."
        android:textSize="20sp"
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selector de vista"
        android:textSize="18sp"
        android:paddingBottom="8dp"/>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:selectedWeekBackgroundColor="#6100EC" />


    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AGREGAR"
        android:textAllCaps="true" />

</LinearLayout>
